{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "outDir": "./dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./lib/types",
    "lib": ["esnext", "dom"],
    "types": ["node"]
  },
  "include": ["src/*"],
  "exclude": ["dist/**"]
}
